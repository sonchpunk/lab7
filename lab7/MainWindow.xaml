<Window x:Class="lab7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab7"
        mc:Ignorable="d"
        Title="SynthesizeSpeech" Height="300" Width="400">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF9A9A9"/>
            <GradientStop Color="#FFA34E4E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Button x:Name="LoadTextButton" Margin="100,210,100,24" Height ="50" Width="200" Content="Загрузить текст" Click="LoadTextButton_Click"/>
        <TextBox x:Name="TextInput" Height="100" Margin="10,30,10,154" Background="White"/>
        <Button x:Name="SynthesizeSpeechButton" Height ="50" Width="200" Content="Синтезировать речь" Click="SynthesizeSpeechButton_Click" Margin="100,142,100,92"/>
    </Grid>
</Window>
